<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_height="match_parent"
android:orientation="vertical"
    android:background="@drawable/chitietima"
tools:context=".chitietActivity">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#111BCF"
        android:title="Chi tiết món ăn"
        android:id="@+id/toolbarmonan"
        android:titleTextColor="#FFFFFF"
        tools:ignore="NewApi">
    </Toolbar>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <ImageView
        android:layout_height="150dp"
        android:layout_width="150dp"
        android:id="@+id/anh"
        android:layout_margin="10dp"
        android:background="#222222"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#FFFCFC"

            android:textStyle="bold"
            android:textSize="20sp"

            android:layout_margin="10dp"
            android:id="@+id/tensp"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textColor="#f20"

            android:textStyle="bold"
            android:textSize="20sp"
            android:id="@+id/giasp"
            android:layout_margin="10dp"
            />
        <Spinner
            android:layout_height="wrap_content"
            android:layout_width="match_parent"

            android:id="@+id/spiner"

            android:layout_marginTop="10dp"
            android:gravity="center_horizontal" >
        </Spinner>
        <Button
            android:id="@+id/btthemgiohang"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textSize="15sp"
            android:text="Thêm vào giỏ hàng"
            android:textColor="#123121"
            />

        >
    </LinearLayout>
</LinearLayout>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="110dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Mô tả sản phẩm"
        android:layout_marginTop="10dp"
        android:textColor="#685DFA"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textSize="20sp"

            android:textColor="#ffffff"
            android:paddingBottom="10dp"
            android:id="@+id/textmota"
            />
    </ScrollView>

</LinearLayout>
</LinearLayout>